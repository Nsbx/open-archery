{# templates/security/login.html.twig #}
{% extends 'base.html.twig' %}

{% block bodyClass %}bg-primary h-screen{% endblock %}

{% block body %}
    <div class="flex flex-col h-full items-center justify-center">
        <div class="flex flex-col items-center mb-8">
            <h1 class="text-4xl">{{ club_name }}</h1>
            <p class="text-xl text-black dark:text-zinc-200">Gestion des créneaux d'entraînement</p>
        </div>
        <div class="card-primary">
            <form class="flex flex-col items-center" action="{{ path('app_login') }}" method="POST" data-turbo="false">
                <input type="email" name="email" placeholder="Email" class="mb-4 w-96">
                <button type="submit" class="button">Recevoir un lien magique</button>
            </form>
        </div>
        {% for message in app.flashes('error') %}
            <div class="alert error">
                {{ message }}
            </div>
        {% endfor %}
        {% for message in app.flashes('success') %}
            <div class="alert success">
                {{ message }}
            </div>
        {% endfor %}
    </div>
{% endblock %}
